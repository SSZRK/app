{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SSZRK",
  "version": "0.1.1",
  "identifier": "pl.sszrk.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "splashscreen",
        "title": "Symulacyjny System Zarządzania Ruchem Kolejowym",
        "url": "./splashscreen.html",
        "resizable": false,
        "fullscreen": false,
        "width": 300,
        "height": 400,
        "transparent": true,
        "decorations": false,
        "center": true,
        "closable": false,
        "alwaysOnTop": true,
        "dragDropEnabled": false,
        "maximizable": false,
        "minimizable": false,
        "skipTaskbar": true
      },
      {
        "label": "main",
        "title": "Symulacyjny System Zarządzania Ruchem Kolejowym",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "focus": true,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM3NUVBODNFOEY0RTQxNzYKUldSMlFVNlBQcWhlTndCQmxqOU03ZWlzT29CdVFDSlRaTHRnYWlWVFZhMGRUbTllOGVVelBpYkUK",
      "windows": {
        "installMode": "passive"
      },
      "endpoints": [
        "https://github.com/SSZRK/app/releases/latest/download/latest.json"
      ]
    }
  }
}
